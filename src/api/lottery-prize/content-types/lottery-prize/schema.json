{
  "kind": "collectionType",
  "collectionName": "lottery_prizes",
  "info": {
    "singularName": "lottery-prize",
    "pluralName": "lottery-prizes",
    "displayName": "LotteryPrize",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "prizeType": {
      "type": "enumeration",
      "enum": [
        "usdt",
        "ai_token",
        "physical"
      ],
      "required": true
    },
    "amount": {
      "type": "decimal",
      "required": true
    },
    "probabilityWeight": {
      "type": "integer",
      "required": true,
      "description": "概率权重"
    },
    "stockQty": {
      "type": "integer",
      "default": -1,
      "description": "库存数量，-1表示无限"
    },
    "enabled": {
      "type": "boolean",
      "default": true
    },
    "lottery_spins": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::lottery-spin.lottery-spin",
      "mappedBy": "prize"
    }
  }
} 